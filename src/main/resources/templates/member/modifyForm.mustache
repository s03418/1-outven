<script type="text/javascript">

var code = null;
pwdconfirmcheck = false;
pwdcheck = false;
namecheck = false;
emailconfirmcheck = false;

function modifyAddress() {
	
    // div 태그 클래스 변경
    var addressField = document.querySelector('.field.address');
    addressField.classList.remove('address');
    addressField.classList.add('tel-number');

